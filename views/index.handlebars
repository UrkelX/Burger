<div class="container">
    <h1>Bob's Burgers!</h1>

<div class="row">
    <img src="public/assets/img/burger.png" alt="cartoon burger" width="250" height="300">

    <form class="create-form">
        <div class="form-group">
            <label for="createburger" class="createBurger">Burger Choice:</label>
            <input type="text" id="createburger" name="burger">
            <button class="btn-danger" type="submit"><i class="fas fa-hamburger"></i></button>
        </div>
    </form>
</div>

    <br>

    <div class="row">
        <div class="col-md-6">
            <h2>Burgers ready to eat!</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/not-devoured-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>


        <div class="col-md-6">
            <h2>Burgers Eaten!</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/devoured-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>